{
  "compilerOptions": {
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "baseUrl": ".",
    "target": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "types": ["vite/client", "react", "vite-plugin-svgr/client"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "paths": {
      "api/*": ["src/api/*"],
      "assets/*": ["src/assets/*"],
      "interfaces/*": ["src/interfaces/*"],
      "modals/*": ["src/modals/*"],
      "panels/*": ["src/panels/*"],
      "styles/*": ["src/styles/*"],
      "utils/*": ["src/utils/*"],
      "root/*": ["src/*"]
    }
  },
  "exclude": ["./.fttemplates"],
  "include": ["./src", "./vite.config.ts"]
}
